@page
@model NewSite2.Pages.ContactUsModel
@{
    ViewData["ActivePage"] = "ContactUs";
}
<h2>Contact Us</h2>

<form asp-page="/Response" class="needs-validation" novalidate>
    <!-- Full Name -->
    <div class="mb-3">
        <label for="fullName" class="form-label">Full Name:</label>
        <input type="text" class="form-control" id="fullName" name="fullName" placeholder="Enter full name" required>
    </div>

    <!-- Email Address -->
    <div class="mb-3">
        <label for="email" class="form-label">Email Address:</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="Enter email" pattern="^[^@@\s]+@@[^@@\s]+\.[A-Za-z]{2,}$" required>
        <div class="invalid-feedback">Not a vaid format</div>
    </div>

    <!-- Phone Number -->
    <div class="mb-3">
        <label for="phone" class="form-label">Phone Number:</label>
        <input type="tel" class="form-control" id="phone" name="phone" placeholder="Enter phone number - digits only" pattern="^[0-9\s\-\(\)]{10,15}$" required>
        <div class="invalid-feedback">Must contain 11 gits only, do not use spaces</div>
    </div>

    <!-- Property of Interest -->
    <div class="mb-3">
        <label for="property" class="form-label">Property of Interest:</label>
        <select class="form-select" id="property" name="property" required>
            <option value="">-- Select a property --</option>
            <option value="apartment">Apartment</option>
            <option value="house">House</option>
            <option value="commercial">Commercial</option>
        </select>
    </div>

    <!-- Enquiry Type -->
    <div class="mb-3">
        <label class="form-label d-block">Enquiry Type:</label>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" id="booking" name="enquiryType" value="Booking" required>
            <label class="form-check-label" for="booking">Booking</label>
            <div class="invalid-feedback">Please choose an enquiry type.</div>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" id="general" name="enquiryType" value="General Question">
            <label class="form-check-label" for="general">General Question</label>
        </div>
        <div class="invalid-feedback ">Please provide your choice.</div>
    </div>

    <!-- Start Date -->
    <div class="mb-3">
        <label for="startDate" class="form-label">Start Date:</label>
        <input type="date" class="form-control" id="startDate" name="startDate" required>
    </div>

    <!-- Number of Nights -->
    <div class="mb-3">
        <label for="nights" class="form-label">Number of Nights:</label>
        <input type="number" class="form-control" id="nights" name="nights" min="1" max="21" required>
    </div>

    <!-- Message -->
    <div class="mb-3">
        <label for="message" class="form-label">Message / Additional Details:</label>
        <textarea class="form-control" id="message" name="message" rows="4" placeholder="Enter details"></textarea>
    </div>

    <!-- Consent / Agreement -->
    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" id="consent" name="consent" required>
        <label class="form-check-label" for="consent">
            I agree to be contacted regarding this enquiry
        </label>
    </div>

    <!-- Submit -->
    <button type="submit" class="btn btn-primary">Submit</button>
</form>


<script>
    (() => {
        'use strict';
        const forms = document.querySelectorAll('.needs-validation');
        Array.from(forms).forEach(form => {
            form.addEventListener('submit', e => {
                if (!form.checkValidity()) {
                    e.preventDefault();
                    e.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    })();
</script>

